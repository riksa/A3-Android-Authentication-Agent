<resources>
    <style name="fragment_layout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:padding">8dp</item>
    </style>
    <style name="fragment_layout_keylist" parent="fragment_layout">
    </style>
    <style name="fragment_layout_create_keypair" parent="fragment_layout">
        <item name="android:gravity">top</item>
    </style>
    <style name="label">
        <item name="android:padding">8dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="col">
        <item name="android:layout_gravity">center</item>
        <item name="android:padding">4dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="col_keyname" parent="col">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="col_keytype" parent="col"></style>
    <style name="col_keystrength" parent="col"></style>
</resources>